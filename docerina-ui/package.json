        "autoprefixer": "^9.7.3",
        "babel-jest": "^27.3.1",
        "babel-loader": "^8.2.3",
        "copy-webpack-plugin": "^6.4.1",
        "css-loader": "^3.6.0",
        "file-loader": "^5.0.2",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^26.6.3",
        "postcss": "^8.3.3",
        "postcss-loader": "^4.3.0",
        "react-helmet": "^6.1.0",
        "style-loader": "^1.3.0",
        "url-loader": "^3.0.0",
        "webpack": "^4.46.0",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.11.2"
    },
    "dependencies": {
        "prism-react-renderer": "^1.2.1",
