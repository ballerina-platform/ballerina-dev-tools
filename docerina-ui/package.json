    "jest": {
        "verbose": true,
        "roots": [
            "src"
        ],
        "testRegex": "\\.test\\.jsx?$",
        "transform": {
            "\\.jsx?$": "babel-jest"
        },
        "setupFiles": [
            "<rootDir>/src/__tests__/test-env.js"
        ],
        "collectCoverage": true
    }
